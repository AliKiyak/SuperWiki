<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">


    <TextView
        android:id="@+id/authors_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/authorstitle"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="top"
        android:fontFamily="@font/poppins"
        />

    <TextView
        android:id="@+id/this_app_wa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/made_by"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ali_kiyak_foto"
            android:foreground="@drawable/rounded_fg"
            android:layout_marginRight="20dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foreground="@drawable/rounded_fg"
            android:src="@drawable/din_vanwezemael_foto"
            android:layout_marginRight="20dp"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foreground="@drawable/rounded_fg"
            android:src="@drawable/wesley_monten_foto"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/app_info_"
        android:layout_width="311dp"
        android:layout_height="39dp"
        android:text="@string/appinfotitle"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="top" />

    <TextView
        android:id="@+id/with_the_su"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="top"
        android:text="@string/info"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"/>
</LinearLayout>