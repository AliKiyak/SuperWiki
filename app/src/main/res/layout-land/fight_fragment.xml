<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:gravity="left">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titlefight"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:fontFamily="@font/poppins"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/firstcharacter"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:fontFamily="@font/poppins"/>

            <Spinner
                android:id="@+id/characterspinner1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawSelectorOnTop="true"
                android:background="@color/white"
                android:layout_marginHorizontal="25dp"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="V.S"
            android:fontFamily="@font/poppins"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/secondcharactershort"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:fontFamily="@font/poppins"/>

            <Spinner
                android:id="@+id/characterspinner2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawSelectorOnTop="true"
                android:background="@color/white"
                android:layout_marginHorizontal="25dp"
                />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/fightbutton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/titlefight"
        android:background="@color/yellowAccent"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:layout_gravity="center"
        />
</LinearLayout>